#include <math.h>
#include <stdio.h>
int main() {
    int inp, c1=0;
    printf("Enter a number to check number of 1s in its binary form:");\
    scanf("%d",&inp);

    while (inp!=0)
    {
        if ( (inp & 1) == 1)
        {
            c1++;
            inp = inp >> 1;
        }
        else inp = inp >> 1;
    }

    printf("\nTotal number of 1s in the binary form: %d",c1);
    return 0;
}